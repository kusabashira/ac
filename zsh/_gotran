#compdef gotran

_arguments \
    '(-e --expr *)'{-e,--expr=}'[translate TEXT]:text' \
    '(- 1 2 *)'{-h,--help}'[show this help message]' \
    '(- 1 2 *)'{-v,--version}'[print the version]' \
    '1: :_guard "^--*" "source language"' \
    '2: :_guard "^--*" "destination language"' \
    '*:input files:_files'
