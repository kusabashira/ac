#compdef vil

_arguments \
    '(-n --quiet --silent)'{-n,--quiet,--silent}'[suppress automatic printing of buffer]' \
    '(1)*'{-e,--expression}'[add the script to the commands to be executed]:script' \
    '(1)*'{-f,--file}'[add the contents of script-file to the commands to be executed]:script-file' \
    '(--help)'--help'[display this help text and exit]' \
    '(--version)'--version'[output version information and exit]' \
    '1: :_guard "^--*" "vim script"' \
    '*:input files:_files'
